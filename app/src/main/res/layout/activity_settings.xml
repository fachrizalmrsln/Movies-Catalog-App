<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SettingsActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:gravity="center"
        android:text="@string/language"
        android:textSize="@dimen/text24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/oneDp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/linear_change_language"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current_language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/text18sp"
            android:textStyle="bold"
            tools:text="@string/current_language" />

        <ImageView
            android:layout_width="@dimen/dimen200dp"
            android:layout_height="@dimen/dimen200dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:layout_weight="4"
            android:contentDescription="@string/checklist_language"
            android:src="@drawable/ic_done" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/oneDp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:gravity="center"
        android:text="@string/notification"
        android:textSize="@dimen/text24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/oneDp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/linear_change_notification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notification_daily1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/daily_reminder"
            android:textSize="@dimen/text18sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/SwitchTheme" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/oneDp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/linear_change_notification2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notification_daily2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/update_reminder"
            android:textSize="@dimen/text18sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/SwitchTheme" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/oneDp"
        android:background="@android:color/darker_gray" />

</LinearLayout>